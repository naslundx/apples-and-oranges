<!-- CONTENT -->
<div id="content">
<div class="container">
    <div class="row" id="info">
        <!--<h3>Can you pair up <%= first.title %> with <%= second.title %>?</h3>-->
        <h3>Can you pair up these two sets?</h3>
        <p>They don't have anything in common... or do they? <strong>Drag to rearrange!</strong></p>
    </div>

    <div class="row">
        <div class="five columns" id="leftList">
            <h5><%= first.title %></h5>
            <div id="leftListContent">
                <% for(var i=0; i < first.items.length; i++) { %>
                    <div>
                        <!--<img src= "assets/img/<%= first.items[i] %>.png"/>-->
                        <%=i+1%>: <%= first.items[i] %>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="two columns" id="centerList">
            <h5>.</h5>

            <% for(var i=0; i < second.items.length; i++) { %>
                <div>
                    --- --- ---
                </div>
            <% } %>
        </div>
        <div class="five columns" id="rightList">
            <h5><%= second.title %></h5>
            <div id="rightListContent">
                <% for(var i=0; i < second.items.length; i++) { %>
                    <div>
                        <!--<img src= "assets/img/<%= second.items[i] %>.png"/>-->
                        <%=i+1%>: <%= second.items[i] %>
                    </div>
                <% } %>
            </div>
        </div>      
    </div>
    <div class="row">
        <div class="twelve columns" id="submit">
            <form id="toserver">
                </br>
                <button type="submit" class="button">Done!</button>
            </form>
        </div>
    </div>        
</div>
</div>

<!-- ADD SORTABLE CONTAINERS -->
<script language="javascript">
    var firstId = <%= firstId %>;
    var secondId = <%= secondId %>;
    var firstIndices = [];
    var secondIndices = [];
    for (var i=0; i < <%= first.items.length %>; i++) { 
        firstIndices.push(i);
        secondIndices.push(i);
    }

    Sortable.create(leftListContent, { 
        animation: 150,
        onEnd: function (evt) {
            var temp = firstIndices[evt.newIndex];
            firstIndices[evt.newIndex] = firstIndices[evt.oldIndex];
            firstIndices[evt.oldIndex] = temp;
        }
    });
    Sortable.create(rightListContent, { 
        animation: 150,
        onEnd: function (evt) {
            var temp = rightListContent[evt.newIndex];
            rightListContent[evt.newIndex] = rightListContent[evt.oldIndex];
            rightListContent[evt.oldIndex] = temp;
        }
    });
</script>

